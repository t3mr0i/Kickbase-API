{
    "info": {
        "_postman_id": "c4f4c6e4-d0c4-4b61-a4f4-5e5c7c7b5b9e",
        "name": "Kickbase API",
        "description": "Kickbase API Collection",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://api.kickbase.com",
            "type": "string"
        },
        {
            "key": "theme",
            "value": "dark",
            "type": "string"
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{authToken}}",
                "type": "string"
            }
        ]
    },
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "if (pm.variables.get('theme') === 'dark') {",
                    "    pm.theme.set('dark');",
                    "} else {",
                    "    pm.theme.set('light');",
                    "}"
                ]
            }
        }
    ],
